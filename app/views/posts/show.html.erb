<section id="primary_content" class="single">
	<article class="post">
		<h1><%= @post.title %></h1>
		<time>Warbled on <%= @post.created_at.to_formatted_s(:article) %> <%= "by #{link_to @post.user.short_name, member_path(@post.user)}".html_safe unless @post.user.nil? %></time>
		<div class="social-buttons">
			<div class="twitter-share-button">
				<a href="https://twitter.com/share" data-url="<%=request.original_url%>" class="twitter-share-button"></a>
			</div>

			<div class="fb-share-button">
			<iframe src="//www.facebook.com/plugins/like.php?href=http://<%=request.host+request.fullpath%>&amp;width&amp;layout=button_count&amp;action=like&amp;show_faces=false&amp;share=false&amp;height=65&amp;" scrolling="no" frameborder="0" style="border:none; overflow:hidden; height:65px;" allowTransparency="true"></iframe>
			</div>
		</div>



		<% if @post.body.is_json? %>
		<%= render_sir_trevor(@post.body) %>
		<% else %>
		<%= sir_trevor_markdown(@post.body).html_safe %>
		<% end %>
	</article>
	<p class="cta strong"><%= link_to "More warblings", warblings_path %></p>
</section>



